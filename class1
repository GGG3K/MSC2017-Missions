        private void button16_Click(object sender, EventArgs e)
        {
            Single r;//r use to keep the result
            string t = textBox1.Text;//t use to keep the arithmetic fault acess
            int space = t.IndexOf(' ');//Use to search the location of spacebar
            string s1 = t.Substring(0,space);//s1 use to keep the first operand
            char op = Convert.ToChar(t.Substring(space = 1, 1));//op use to keep operators
            string s2 = t.Substring(space + 3);//s2 use to keep the second operand
            Single arg1 = Convert.ToSingle(s1);//convert operand from string to single
            Single arg2 = Convert.ToSingle(s2);

            switch (op)
            {
                case '+':
                    r = arg1 + arg2;
                    break;
                 
                case '*':
                    r = arg1 * arg2;
                    break;
               // case 'ï¹£':
                   // r = arg1 - arg2;
                case '/':
                    r = arg1 / arg2;
                    break;
                    if (arg2 == 0)
                    {
                        throw new ApplicationException();
                    }
                    else
                    {
                        r = arg1 / arg2;
                        break;
                    }
                    break;
                default:
                    throw new ApplicationException();
            }
            textBox1.Text = r.ToString();





        }
    }
